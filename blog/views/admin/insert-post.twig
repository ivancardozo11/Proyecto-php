{%  extends "layout.twig" %}
{% block content %}
<h2>New post</h2>
<p><a class="btn btn-outline-secondary" href="{{'admin/posts'  | url }}">Back</a>
</p>

{% if errors %}
  <div class="alert alert-danger">
    <ul>
      {% for input , messages in errors %}
          {% for message in messages %}
            <li> {{ input }} : {{ message }} </li>
          {% endfor %}
      {% endfor %}
    </ul>
  </div>
{% endif %}
{% if result %}
<div class= "alert alert-success" role="alert">Post Saved ¡¡</div>
{% endif %}
<form  method="post">
      <div class="form-group">
        <label for="inputTitle">Title</label>
        <input class="form-control" type="text" name="title"  id="inputTitle" >
      </div><!-- / form group -->
      <textarea class="form-control" name="content" id="inputContent"rows="5"></textarea>
      <br>
      <input  class="btn btn-primary" type="submit" value="Save">
</form><!-- / formulario terminado -->
{% endblock %}
